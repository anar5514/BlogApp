@model IQueryable<Category>
@{
    ViewData["Title"] = "List";
    Layout = "_AdminLayout";
}

    <div class="container mt-3">
        <h1>Category List</h1>
        <br />
        <div class="row">
            <div class="col">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>


                                <td>@category.Name</td>

                                <td>
                                    <a class="btn btn-sm btn-success" asp-controller="Category" asp-action="AddOrUpdate"
                                       asp-route-id="@category.Id">Details</a>
                                </td>

                                <td>
                                    <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="Delete"
                                       asp-route-id="@category.Id">Remove</a>
                                </td>

                            </tr>
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

