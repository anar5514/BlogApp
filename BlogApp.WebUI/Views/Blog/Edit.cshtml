@model Blog
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section scripts
{
    <script src="/node_modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}

<div class="container mt-3">
    <h1>Edit Blog</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" class="form-control" />
        <input type="hidden" asp-for="ImagePath" class="form-control" />

        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/img/@Model.ImagePath" width="120" />
            <input type="file" id="file" name="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="IsApproved" class="form-check-input">
                Is Approved
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="IsHome" class="form-check-input">
                Is Home
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="IsSlider" class="form-check-input">
                Is Slider
            </label>
        </div>

        <div class="form-group">
            <label for="CategoryId">Category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                <option selected disabled>Select category</option>
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Submit" />
    </form>
</div>



