@model IQueryable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "_AdminLayout";
}


<div class="container mt-3">
    <h1>Blog List</h1>
    <hr />
    <a class="btn btn-primary"
       href="/blog/create">Create</a>
    <hr />
    <div class="row">
        <div class="col">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>is Approved</th>
                        <th>is Home</th>
                        <th>is Slider</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.Id</td>
                            <td>
                                <img src="~/img/@blog.ImagePath" width="100" />
                            </td>
                            <td>@blog.Title</td>
                            <td>@blog.Date</td>

                            <td>
                                @if (blog.IsApproved)
                                {
                                    <i class="fas fa-check"></i>

                                }
                                else
                                {
                                    <i class="fas fa-times"></i>
                                }
                            </td>

                            <td>
                                @if (blog.IsHome)
                                {
                                    <i class="fas fa-check"></i>

                                }
                                else
                                {
                                    <i class="fas fa-times"></i>
                                }
                            </td>

                            <td>
                                @if (blog.IsSlider)
                                {
                                    <i class="fas fa-check"></i>

                                }
                                else
                                {
                                    <i class="fas fa-times"></i>
                                }
                            </td>

                            <td>
                                <a class="btn btn-sm btn-success" asp-controller="Blog" asp-action="Edit"
                                   asp-route-id="@blog.Id">Details</a>
                                <a class="btn btn-sm btn-danger" asp-controller="Blog" asp-action="Delete"
                                   asp-route-id="@blog.Id">Remove</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
