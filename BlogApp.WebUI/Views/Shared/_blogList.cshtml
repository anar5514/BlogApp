@model IEnumerable<Blog>

    @if (Model.Count() != 0)
    {

        @foreach (var blog in Model)
        {
            <div class="card mb-2">
                <div class="card-header">
                    @blog.Title
                </div>
                <img class="card-img-top" src="~/img/@blog.ImagePath" alt="Card image cap">
                <div class="card-block">
                    <h4 class="card-title">@blog.Title</h4>
                    <p class="card-text">@blog.Description</p>
                    <a asp-controller="Blog" asp-action="Details"
                       asp-route-id="@blog.Id" class="btn btn-primary">Show details</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">Kayıt yok</div>
    }
